.clearfix:after{
    content: '';
    display: block;
    clear: both;
    height: 0;
    visibility: hidden;
}
.star_box{
    background: #fff;
    padding: 75rpx 100rpx;
}
.star{
    float: left;
    width: 80rpx;
    height: 80rpx;
    margin-right: 36rpx;
    background: url(https://static.sesine.com/mina/images/star.png) no-repeat center center;
    background-size: 100% 100%;
    background-color: #d1d1d1;
}
.star:last-child{
    margin-right: 0;
}
.text{
    background: #fff;
    padding-bottom: 80rpx;
}
.text_con{
    width: 550rpx;
    height: 200rpx;
    border: 1rpx solid #e5e5e5;
    border-radius: 5rpx;
    margin: 0 auto;
    box-sizing: border-box;
    padding:10rpx;
    color: #666666;
}
.bottom_button{
    width: 650rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
    color: #fff;
    background: #e02128;
    margin: 40rpx auto 0;
}
.on-click{
    background-color: #ff949e
}