/**index.wxss**/
.banner{
  height: 270rpx;
}
.slider-img{
  width: 100%;
  height: 100%;
}
.second-level-kinds{
  background: #fff;
  padding-top: 35rpx;
  overflow: hidden;
}
.kinds-item{
  width: 25%;
  text-align: center;
  float: left;
  box-sizing: border-box;
  padding-bottom: 40rpx;
  font-size: 22rpx;
  color: #7F7F7F;
}
.kinds-img{
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin:0 auto;
}
.kinds-item:after{
  content: '';
  display: block;
  clear: both;
  height: 0;
  visibility: hidden;
}
.index_item{
  margin:20rpx 0;
  background: #fff;
  padding-bottom: 40rpx;
  position: relative;
}
.item-img{
  width: 100%;
  height: 350rpx;
}
.item-title{
  font-size: 28rpx;
  color: #191919;
  padding:15rpx 20rpx;
}
.team-num{
  color: #666666;
  font-size: 20rpx;
  padding-left: 20rpx;
  float: left;
  line-height: 65rpx;
  margin-right: 15rpx;
}
.team-price{
  color: #DF2127;
  font-size: 34rpx;
  line-height: 60rpx;
  float: left;
  margin-right: 25rpx;
}
.single-price{
  font-size: 22rpx;
  color: #cccccc;
  line-height: 70rpx;
  text-decoration: line-through;
  
}
.go-team{
  position: absolute;
  padding:0 50rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  background: #DF2127;
  font-size: 26rpx;
  right: 20rpx;
  bottom: 35rpx;
  border: none;
}
.loading{
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 99;
    top:0;
    left: 0;
    background: #fff;
}
.loading image{
    width: 124rpx;
    height: 124rpx;
    position: absolute;
    left: 50%;
    top:50%;
    margin-top: -62rpx;
    margin-left: -62rpx;
}