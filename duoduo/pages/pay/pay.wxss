.add-address{
    background: #fff;
    padding:25rpx;
    font-size: 26rpx;
    color: #333333;
    position: relative;
    border-top:1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
}
.plus-icon{
    width: 40rpx;
    height: 40rpx;
    background: #FF2741;
    font-size: 26rpx;
    color: #fff;
    line-height: 40rpx;
    text-align: center;
    border-radius: 5rpx;
    float: left;
    margin-right: 25rpx;

}
.arrow-right{
    width: 14rpx;
    height: 26rpx;
    position: absolute;
    top:50%;
    margin-top: -13rpx;
    right: 25rpx;
}
.buy-info{
    padding:15rpx;
    background: #fff;
    margin-top: 20rpx;
    border-top:1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
    position: relative;
}
.buy-pic{
    width: 200rpx;
    height: 200rpx;
    float: left;
    margin-right: 15rpx;
    
}
.buy-title{
    font-size: 26rpx;
    color: #333333;
    line-height: 1.5;
}
.buy-size{
    font-size: 24rpx;
    color: #666666;
    margin-top: 35rpx;
}
.buy-price{
    font-size: 36rpx;
    color: #DF2127;
    position: absolute;
    bottom: 15rpx;
    left: 215rpx;
}

.change_num{
    padding:25rpx 20rpx;
    background: #fff;
    font-size: 26rpx;
    color: #666666;
    border-bottom: 1rpx solid #e5e5e5;
}
.reduce,.plus{
    width: 50rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    background: #e4e4e4;
    color: #cccccc;
    border-radius: 5rpx;
    float:right; 
}
.num{
    padding: 0 35rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: #686868;
    float: right;
}

.clearfix:after{
    content: '';
    display: block;
    clear: both;
    height: 0;
    visibility: hidden;
}
.pay-title{
    height: 65rpx;
    line-height: 65rpx;
    background: #f3f3f3;
    font-size: 22rpx;
    color: #999999;
    background: #f3f3f3;
    padding:0 20rpx;
}
.pay-way{
    padding:25rpx 20rpx 25rpx 70rpx;
    background: #fff;
    position: relative;
    font-size: 26rpx;
    color: #666666;
    height: 90rpx;
    line-height: 45rpx;
    box-sizing: border-box;
}
.wechat-img{
    width: 36rpx;
    height: 36rpx;
    float: left;
    position: absolute;
    left: 20rpx;
    top:50%;
    margin-top: -18rpx;
}
.pay-way icon{
    float: right;
}
.pay-sure{
    height: 100rpx;
    line-height: 100rpx;
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    background: #fff;
}
.pay-left{
    float: right;
}
.total-num{
    font-size: 24rpx;
    color: #999999;
    margin:0 20rpx 0 0;
    float: left;
}
.total-price{
    font-size: 30rpx;
    color: #999999;
    display: inline-block;
}
.red-price{
    display: inline-block;
    color: #e02128;
    font-weight: 600;
    font-size: 36rpx;
}
.pay-btn{
    float: right;
    height: 100rpx;
    line-height: 100rpx;
    padding:0 50rpx;
    background: #e02128;
    font-size: 30rpx;
    color: #fff;
    border-radius: 0;
    margin-left: 15rpx;
}

