.title{
    height: 70rpx;
    line-height: 70rpx;
    padding:0 15rpx;
    background: #f3f3f3;
    font-size: 24rpx;
    color: #999999;
}
.item{
    height: 85rpx;
    line-height: 85rpx;
    background: #fff;
    padding:0 15rpx;
    color: #666666;
    font-size: 26rpx;
    border-bottom: 1rpx solid #e5e5e5;
    position: relative;
}
.icon_btn{
    position: absolute;
    top:25%;
    right: 15rpx;
}
.amount{
    height: 85rpx;
    line-height: 85rpx;
    background: #fff;
}
.amount_input{
    height: 100%;
    padding:0 15rpx;
    color: #666666;
}
.textarea{
    width: 100%;
    height: 150rpx;
    background: #fff;
    padding: 15rpx;
    box-sizing: border-box;
    color: #666666;
}
.bottom_button{
    width: 650rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
    color: #fff;
    background: #e02128;
    margin: 40rpx auto 0;
}